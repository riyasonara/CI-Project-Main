@{
    Layout = "_navigationSidebar";
}

@model CI_Platform_Project.Models.UserCrudVieweModel


<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="~/css/AdminMissions.css" />

</head>
<body>
    <div class="container-fluid">
        <div class="fs-4">
            Mission
        </div>

        <div class="row mt-1">
            <hr class="col-2" style="border: 2px solid black;">
            <hr class="col-10 ">
        </div>

        <div class="button-row mb-3">
            <div class=" start-btn">

                <input class="form-control me-2" id="myInputTextField" type="search" placeholder="Search" aria-label="Search">
            </div>

            <div class="end-btn">
                <button type="button" class="btn btn-outline-warning rounded-pill px-3 py-0 me-2" data-bs-toggle="modal" data-bs-target="#AddModal">
                    <i class="bi bi-plus-lg "></i> <span class="btn-label">Add</span>
                </button>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <form>
                        <div class="modal-content">

                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            <div class="modal-body">
                                <div class="fs-5 bg-dark-subtle border p-3 col-12"> Add</div>

                                <div class="border ps-4 pb-5">

                                    <label class="mt-3">Mission Title</label>
                                    <div>
                                        <input class="col-12 " type="text" id="Title" />
                                    </div>

                                    <label class="mt-2">Short Description</label>
                                    <div class="col-12 mt-2">
                                        <textarea class="col-12" id="ShortDesc"></textarea>
                                    </div>

                                    <label class="mt-2">Description</label>
                                    <div class="col-12 mt-2">
                                        <textarea class="col-12" id="Desc"></textarea>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col">
                                            <label>City</label>
                                            <select id="city" class="form-select" aria-label="Default select example">
                                                <option selected>Select your city</option>
                                                @foreach (var item in Model.Cities)
                                                {
                                                    <option value="@item.CityId">@item.Name </option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col">
                                            <label>Country</label>
                                            <select id="country" class="form-select" aria-label="Default select example">
                                                <option selected>Select your country</option>
                                                @foreach (var item in Model.Countries)
                                                {
                                                    <option value="@item.CountryId">@item.Name</option>
                                                }
                                            </select>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            <label class="mt-2">Mission Organization Name</label>
                                            <input type="text" class="form-control" id="Fname" placeholder="First name" aria-label="First name">
                                        </div>
                                        <div class="col">
                                            <label class="mt-2">Mission Organization Detail</label>
                                            <input type="text" class="form-control" id="Lname" placeholder="Last name" aria-label="Last name">
                                        </div>
                                    </div>

                                    @* =========================== time,goal ==================================================
                                    <div class="row mb-3">
                                    <div class="col">
                                    <label>Mission Type</label>
                                    <select id="city" class="form-select" aria-label="Default select example">
                                    <option selected>Select your mission type</option>
                                    @foreach (var item in Model.Cities)
                                    {
                                    <option value="@item.CityId">@item.Name </option>
                                    }
                                    </select>
                                    </div>
                                    <div class="col">
                                    <label>Country</label>
                                    <select id="country" class="form-select" aria-label="Default select example">
                                    <option selected>Select your country</option>
                                    @foreach (var item in Model.Countries)
                                    {
                                    <option value="@item.CountryId">@item.Name</option>
                                    }
                                    </select>

                                    </div>
                                    ==================================================================================*@

                                    <div class="row mb-3">
                                        <div class="col">
                                            <label>Mission Start Date</label>
                                            <div>
                                                <input class="col-12 " type="date" id="dat" placeholder="dd-mm-yy" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label>Mission End Date</label>
                                            <div>
                                                <input class="col-12 " type="date" id="dat" placeholder="dd-mm-yy" />
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col">
                                            <label class="mt-2">Mission Registration Deadline</label>
                                            <input type="text" class="form-control" id="Fname" placeholder="First name" aria-label="First name">
                                        </div>
                                        <div class="col">
                                            <label class="mt-2">Mission Availability</label>
                                            <input type="text" class="form-control" id="Lname" placeholder="Last name" aria-label="Last name">
                                        </div>
                                    </div>


                                    @* =====================================mission theme, skill========================================
                                    <div class="row mb-3">
                                    <div class="col">
                                    <label>Mission Type</label>
                                    <select id="city" class="form-select" aria-label="Default select example">
                                    <option selected>Select your mission type</option>
                                    @foreach (var item in Model.Cities)
                                    {
                                    <option value="@item.CityId">@item.Name </option>
                                    }
                                    </select>
                                    </div>
                                    <div class="col">
                                    <label>Country</label>
                                    <select id="country" class="form-select" aria-label="Default select example">
                                    <option selected>Select your country</option>
                                    @foreach (var item in Model.Countries)
                                    {
                                    <option value="@item.CountryId">@item.Name</option>
                                    }
                                    </select>

                                    </div>
                                    ==================================================================================*@

                                    <div class="row">
                                        <div class="col">
                                            <label class="mt-2">Mission Images</label>
                                            <input type="text" class="form-control" id="Fname" placeholder="First name" aria-label="First name">
                                        </div>
                                        <div class="col">
                                            <label class="mt-2">Mission Documents</label>
                                            <input type="text" class="form-control" id="Lname" placeholder="Last name" aria-label="Last name">
                                        </div>
                                    </div>


                                </div>











                            </div>

                            <input type="hidden" id="CMSId" value="0" name="CMSId" />

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn border-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn oran" onclick="AddEdit()" data-bs-dismiss="modal">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @*End of Modal*@

    </div>


    <table id="userTable">
        <thead>
            <tr>
                <th>Mission Title</th>
                <th>Mission Type</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var missions in Model.missions)
            {
                <tr>
                    <td>@missions.Title</td>

                    <td>@missions.MissionType</td>

                    <td>@missions.StartDate</td>

                    <td>@missions.EndDate</td>

                    <td><i class="bi bi-pencil-square" data-bs-toggle="modal" data-bs-target="#exampleModal1" @*id="@fn.UserId"*@ onclick="editAdminUser(this.id)"></i> | <i class="bi bi-trash." style="color:red"></i></td>


                </tr>
            }

        </tbody>
    </table>

    </div>
</body>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {

        $('#userTable').DataTable();
    });



</script>


</html>