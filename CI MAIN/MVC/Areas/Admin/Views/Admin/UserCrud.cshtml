@model CI_Platform_Project.Models.UserCrudVieweModel
@{
    Layout = "_navigationSidebar";
}
<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="~/css/cmspage.css" />

</head>
<body>
    <div class="container-fluid">
        <div class="fs-4">
            User
        </div>

        <div class="row mt-1">
            <hr class="col-2" style="border: 2px solid black;">
            <hr class="col-10 ">
        </div>

        <div class="button-row mb-3">
            
            <div class="start-btn">
                <input class="form-control me-2" id="myInputTextField" type="search" placeholder="Search" aria-label="Search">
            </div>

            <div class="end-btn">
                <button type="button" class="btn btn-outline-warning rounded-pill px-3 py-0 me-2" data-bs-toggle="modal" data-bs-target="#AddModal">
                    <i class="bi bi-plus-lg "></i> <span class="btn-label">Add</span>
                </button>
            </div>
            <!-- Modal -->
            
            <div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="fs-5 bg-dark-subtle border p-3 col-12"> Add</div>

                            <div class="border ps-4 pb-5">

                                <div class="row">
                                    <div class="col">
                                        <label class="mt-2">First Name</label>
                                        <input type="text" class="form-control" id="Fname" placeholder="First name" aria-label="First name">
                                    </div>
                                    <div class="col">
                                        <label class="mt-2">Last Name</label>
                                        <input type="text" class="form-control" id="Lname" placeholder="Last name" aria-label="Last name">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label class="mt-2">Email</label>
                                        <input type="text" class="form-control" id="email" placeholder="Enter email">
                                    </div>
                                    <div class="col">
                                        <label class="mt-2">Password</label>
                                        <input type="text" class="form-control" id="password" placeholder="Enter Password">
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col">
                                        <label class="mt-2">Employee id</label>
                                        <input type="email" class="form-control" id="empID" placeholder="Enter Employee ID">
                                    </div>
                                    <div class="col">
                                        <label class="mt-2">Department</label>
                                        <input type="text" class="form-control" id="department" placeholder="Enter Department">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col">
                                        <label class="mt-2">City</label>
                                        <select id="city" class="form-select" aria-label="Default select example">
                                            <option selected>Select your city</option>
                                            @foreach (var item in Model.Cities)
                                            {
                                                <option value="@item.CityId">@item.Name </option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col">
                                        <label class="mt-2">Country</label>
                                        <select id="country" class="form-select" aria-label="Default select example">
                                            <option selected>Select your country</option>
                                            @foreach (var item in Model.Countries)
                                            {
                                                <option value="@item.CountryId">@item.Name</option>
                                            }
                                        </select>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label class="mt-2">Profile Text</label>
                                        <input type="text" class="form-control" id="proftxt" placeholder="Enter Profile Text">
                                    </div>
                                    <div class="col">
                                        <label class="mt-2">Status</label>
                                        <input type="number" class="form-control" id="status" placeholder="Enter Status">
                                    </div>
                                </div>


                            </div>

                            <input type="hidden" id="userID" value="0" name="userID" />

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn border-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn oran" onclick="adduser()" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            @*End of Modal*@

        </div>







        <table id="userTable">
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>EmployeeID</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.EmployeeId</td>
                        <td>@user.Department</td>
                        <td>
                            @if (@user.Status == 1)
                            {
                                <span style="color:green">Active</span>
                            }
                            else
                            {
                                <span style="color:red">Inactive</span>
                            }
                        </td>

                        <td>

                            <span>
                                <button class="btn shadow-none" data-bs-toggle="modal" data-bs-target="#AddModal" onclick="GetUser(@user.UserId)">
                                    <i class="bi bi-pencil-square fs-5" style="color:green;"></i>
                                </button>
                            </span>
                            <span>
                                <button class="btn shadow-none" data-bs-toggle="modal" data-bs-target="#AddModal" onclick="deleteUser(@user.UserId)">
                                    <i class="bi bi-trash fs-5" style="color:red;"></i>
                                </button>
                            </span>

                        </td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</body>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {

        $('#userTable').DataTable();


    });



</script>
<script src="~/js/userPage.js"></script>

