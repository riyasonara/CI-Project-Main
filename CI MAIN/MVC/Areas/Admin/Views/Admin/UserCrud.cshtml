@model CI_Platform_Project.Models.UserCrudVieweModel
@{
    Layout = "_navigationSidebar";
}
<html>
<head>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
@*    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
*@    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
  @*  <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>*@
    
</head>
<body>
    <div class="container-fluid d-flex">

    
        <div class="usercrud">
            <table id="userTable">
                <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>EmployeeID</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model.users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.EmployeeId</td>
                            <td>@user.Department</td>
                            <td>
                                @if (@user.Status == 1)
                                {
                                    <span style="color:green">Active</span>
                                }
                                else
                                {
                                    <span style="color:red">Inactive</span>
                                }
                            </td>
                            
                            <td><i class="fas fa-edit" data-bs-toggle="modal" data-bs-target="#exampleModal1" @*id="@fn.UserId"*@ onclick="editAdminUser(this.id)"></i> | <i class="fa fa-trash" style="color:red"></i></td>

                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</body>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {

        $('#userTable').DataTable();
    });



</script>
