            <div class="row justify-content-center">
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                    <form asp-controller="User" asp-action="Registration">
                        <div class="mb-3">
                            <label for="formGroupExampleInput" asp-for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" asp-for="FirstName" id="formGroupExampleInput" onkeyup="errorfunc()" placeholder="">
                            <span class="text-danger" id="reqFname" asp-validation-for="FirstName"> </span>
                        </div>
                        <div class="mb-3">
                            <label for="formGroupExampleInput2" asp-for="LastName" class="form-label">Last Name</label>
                            <input type="text" asp-for="LastName" class="form-control" id="formGroupExampleInput2" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="formGroupExampleInput3" asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" value="" type="text" class="form-control" id="formGroupExampleInput2" placeholder="">
                            <span class="text-danger" id="reqPhone" asp-validation-for="PhoneNumber"></span>
                        </div>
                       
                        <div class="mb-3 ">
                            <label for="exampleInputEmail1" asp-for="Email" class="form-label">Email address</label>
                            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1"
                                   aria-describedby="emailHelp" onkeyup="errorfunc()">
                            <span class="text-danger" id="reqEmail" asp-validation-for="Email"> </span>
                        </div>


                        <div class="mb-3">
                            <label for="exampleInputPassword1" asp-for="Password" class="form-label">Password</label>
                            <input type="password"  asp-for="Password" class="form-control" id="exampleInputPassword1" onkeyup="errorfunc()">
                            <span class="text-danger" id="reqPswd" asp-validation-for="Password"> </span>
                        </div>

                        <div class="mb-3">
                            <label for="exampleInputPassword2" asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword2" onkeyup="errorfunc()">
                            <span class="text-danger" id="reqPswd-match" asp-validation-for="ConfirmPassword"> </span>
                        </div>

                        @*<div class="mb-3 ">
                            <label for="exampleInputPassword2" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="pswd" aria-describedby="emailHelp" onfocusout="PswdVal()" onkeyup="errorfunc()">
                            <span class="text-danger" id="pswd-match" style="display:none">Password must match</span>
                        </div>*@
                        <p class="text-danger fs-4">@ViewBag.RegistrationError</p>
                        <button type="submit" id="reg-btn" class="btn mt-4" asp-controller="User" asp-action="Registration">Register</button>
                        <div>
                            <p class="text-center mt-3 lostpswd">
                                <a asp-controller="ForgotPassword" asp-action="ForgotPassword">Lost your password?</a>
                            </p>
                           
                        </div>

                        <div class="text-center for-lap">
                            <p>Already registered?<a asp-controller="User" asp-action="Index">Login now</a></p>
                        </div>
                        <div class=" text-center mt-2">
                            <a asp-action="PrivacyPolicy" asp-controller="User" style="text-decoration:none; cursor:pointer">Privacy Policy</a>
