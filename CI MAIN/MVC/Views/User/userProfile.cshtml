<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
 <link src="~/css/userProfile.css" asp-append-version="true"></link>
 <style>
        .user-change-pass-link {
            font-size: 13px;
        }

        .user-username {
            font-size: 22px;
        }

        .user-profile-img {
            width: 130px !important;
            height: 130px !important;
            object-fit: cover !important;
            border: 1px solid grey !important;
        }

        .user-profile-div {
            position: relative;
        }

        .addimgplus {
            position: absolute;
            top: 100px;
            right: 16px;
            /*  color: #F88634;*/
            font-size: 26px;
        }

        .imdupperdiv {
            border: 1px solid lightgrey !important;
        }

 </style>
</head>


<body>
    <div class="container-fluid">

    <div class="row">
        <div class="col-12 col-md-3 col-lg-2 user-profile-left-div d-flex flex-column  mt-3">
            <div class="d-flex flex-column align-items-center justify-content-center">
                <div class="user-profile-div " id="imgdiv">
                    <input type="file" @*asp-for="files"*@ style="display:none" id="imginput" />
                 @*   @if (@Model.avatar != "")
                    {
                        <img src="@Model.avatar" alt=""
                             class="rounded-circle user-profile-img " id="user-profile-img">
                    }
                    else
                    {*@
                        <img src="~/images/user.png" alt=""
                             class="rounded-circle user-profile-img" id="user-profile-img" >
                   @* }
*@
                    <i class="bi bi-plus-circle-fill addimgplus" height="25px" width="25px"></i>

                </div>
                <div class="user-username">@*@Model.firstname.ToUpperInvariant() @Model.lastname.ToUpperInvariant()*@Riya</div>
                <div class="">
                    <!-- Button trigger modal -->
                    <button class="  bg-white border-0 border-white user-change-pass-link" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Change Password
                    </button>

                </div>
            </div>
        </div>
        <div class=" col-12 col-lg-10 col-md-9 p-3">
            
                <h2>Basic Information</h2>

                <div>
                    <form asp-action="userProfile" asp-controller="User">
                        <div class="row mb-3">
                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">First Name</label>
                                <input type="text" class="form-control border" placeholder="Enter your name" id="formGroupExampleInput">

                            </div>
                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">Surname</label>
                                <input type="text" class="form-control border" placeholder="Enter your surname" id="formGroupExampleInput">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">Employee ID</label>
                                <input type="text" class="form-control border" placeholder="Enter your employee id" id="formGroupExampleInput">

                            </div>
                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">Manager</label>
                                <input type="text" class="form-control border" placeholder="Enter your manager details" id="formGroupExampleInput">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">Title</label>
                                <input type="text" class="form-control border" placeholder="Enter your employee id" id="formGroupExampleInput">

                            </div>
                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">Department</label>
                                <input type="text" class="form-control border" placeholder="Enter your manager details" id="formGroupExampleInput">
                            </div>
                        </div>


                        <div class="form-floating mb-3">
                            <textarea class="form-control border" placeholder="Enter your comments.." id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">My Profile</label>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea class="form-control border" placeholder="Enter your comments.." id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Why I volunteer ?</label>
                        </div>


                        <h4>Address Information</h4><hr>
                        <div class="row mb-3">
                            <div class="col">
                                <label>City</label>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Select your city</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="col">
                                <label>Country</label>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Select your country</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>

                        <h4>Professional Information</h4><hr>
                        <div class="row mb-3">
                            <div class="col">
                                <label>Availability</label>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Select your availability</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>

                            <div class="col">
                                <label for="formGroupExampleInput" class="form-label">LinkedIn</label>
                                <input type="text" class="form-control border" placeholder="Enter your linkedIn URL" id="formGroupExampleInput">

                            </div>

                        </div>

                        <h4>My Skills</h4><hr>

                        
                            <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Add skills
                            </button>
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            ...
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        

                    </form>

                </div>

            
        </div>
    </div>
    </div>
</body>

